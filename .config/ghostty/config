#command = /usr/local/bin/fish

# Ghostty to play nice with SSH
# Add the following Tailscale SSH config (or equivalent for sshd)
# "acceptEnv": ["TERM_PROGRAM", "TERM_PROGRAM_VERSION", "COLORTERM"],
# Any intermediate SSH hops need `ssh -o "SendEnv COLORTERM TERM_PROGRAM TERM_PROGRAM_VERSION" computer` to continue to carry this info
shell-integration-features = ssh-env,ssh-terminfo

theme = "Builtin Solarized Dark"
selection-invert-fg-bg = true

background-opacity = .95
background-blur-radius = 20

font-family = "Berkeley Mono"
font-size = 12

mouse-hide-while-typing = false

macos-non-native-fullscreen = visible-menu
macos-option-as-alt = left

# Increase these up from the default of 10
keybind = super+ctrl+down=resize_split:down,30
keybind = super+ctrl+up=resize_split:up,30
keybind = super+ctrl+left=resize_split:left,30
keybind = super+ctrl+right=resize_split:right,30

window-decoration = none
window-padding-x = 10
window-padding-y = 10
