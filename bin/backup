#!/usr/bin/env bash
set -eo pipefail

# configure rclone
# rclone config
# check existing config
# rclone config show ds9sftp

echo "restic auth"
export RESTIC_PASSWORD=$(p restic)

echo "rclone auth"
export RCLONE_CONFIG_PASS=$(p rclone)

echo "proceeding..."
echo ""

REPO="rclone:ds9sftp:/home/backup/robbie_restic"

restic -r "$REPO" backup \
  ~/dropbox \
  ~/Games/pd2/drive_c/d2/Save

restic -r "$REPO" forget --keep-monthly 5 --keep-last 5 --prune

